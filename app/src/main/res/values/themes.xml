        <item name="android:fontFamily">@font/rubik_bold</item>
    </style>

    <style name="Theme.OutfitAI" parent="Base.Theme.OutfitAI" />

    <style name="roundedImageView">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">15dp</item>
    </style>

    <style name="GreenActiveIndicator" parent="Widget.Material3.BottomNavigationView.ActiveIndicator">
        <item name="android:color">@color/green</item>
    </style>

    <style name="GreenBottomNav" parent="Widget.Material3.BottomNavigationView">
        <item name="itemActiveIndicatorStyle">@style/GreenActiveIndicator</item>

        <item name="itemIconTint">@color/bottom_nav_icon_color</item>
        <item name="itemTextColor">@color/bottom_nav_text_color</item>
        <item name="itemRippleColor">@color/green</item>

        <item name="android:background">@null</item>
    </style>
</resources>