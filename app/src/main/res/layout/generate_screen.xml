<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <ImageView
        android:id="@+id/settings_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:layout_marginStart="20dp"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings_icon" />

    <ImageView
        android:id="@+id/rate_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toStartOf="@+id/history_button"
        app:layout_constraintStart_toEndOf="@+id/settings_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_rate"
        app:tint="@color/green" />

    <ImageView
        android:id="@+id/history_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="8dp"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toStartOf="@+id/language_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_history" />

    <ImageButton
        android:id="@+id/language_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        android:padding="8dp"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_language"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/settings_button">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="50dp">

            <ImageView
                android:id="@+id/person_buttonBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/upload_button_background" />

            <ImageView
                android:id="@+id/person_icon"
                android:layout_width="120dp"
                android:layout_height="200dp"
                android:layout_marginTop="50dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:srcCompat="@drawable/person_icon" />

            <ImageView
                android:id="@+id/person_uploadIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginStart="25dp"
                android:layout_marginTop="210dp"
                app:layout_constraintStart_toEndOf="@+id/person_icon"
                app:layout_constraintTop_toTopOf="@id/person_buttonBackground"
                app:srcCompat="@drawable/upload_icon" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/person_selected_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="28dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/person_buttonBackground"
                app:layout_constraintEnd_toEndOf="@+id/person_buttonBackground"
                app:layout_constraintStart_toStartOf="@+id/person_buttonBackground"
                app:layout_constraintTop_toTopOf="@+id/person_buttonBackground"
                app:shapeAppearanceOverlay="@style/roundedImageView" />

            <View
                android:id="@+id/upload_person_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="28dp"
                android:background="@android:color/transparent"
                android:foreground="@drawable/button_ripple"
                app:layout_constraintBottom_toBottomOf="@+id/person_buttonBackground"
                app:layout_constraintEnd_toEndOf="@+id/person_buttonBackground"
                app:layout_constraintStart_toStartOf="@+id/person_buttonBackground"
                app:layout_constraintTop_toTopOf="@+id/person_buttonBackground" />

            <ImageView
                android:id="@+id/clothing_buttonBackground"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="25dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/person_buttonBackground"
                app:srcCompat="@drawable/upload_button_background" />

            <ImageView
                android:id="@+id/clothing_icon"
                android:layout_width="180dp"
                android:layout_height="186dp"
                android:layout_marginStart="-10dp"
                android:layout_marginTop="35dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/person_buttonBackground"
                app:srcCompat="@drawable/clothing_icon" />

            <ImageView
                android:id="@+id/clothing_uploadIcon"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_marginTop="210dp"
                app:layout_constraintStart_toEndOf="@+id/clothing_icon"
                app:layout_constraintTop_toBottomOf="@+id/person_buttonBackground"
                app:srcCompat="@drawable/upload_icon" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/clothing_selected_image"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginStart="8dp"
                android:layout_marginTop="8dp"
                android:layout_marginEnd="28dp"
                android:layout_marginBottom="28dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="@+id/clothing_buttonBackground"
                app:layout_constraintEnd_toEndOf="@+id/clothing_buttonBackground"
                app:layout_constraintStart_toStartOf="@+id/clothing_buttonBackground"
                app:layout_constraintTop_toTopOf="@+id/clothing_buttonBackground"
                app:shapeAppearanceOverlay="@style/roundedImageView" />

            <View
                android:id="@+id/upload_clothing_button"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:background="@android:color/transparent"
                android:foreground="@drawable/button_ripple"
                app:layout_constraintBottom_toBottomOf="@+id/clothing_buttonBackground"
                app:layout_constraintEnd_toEndOf="@+id/clothing_buttonBackground"
                app:layout_constraintStart_toStartOf="@+id/clothing_buttonBackground"
                app:layout_constraintTop_toTopOf="@+id/clothing_buttonBackground" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/result_image"
                android:layout_width="0dp"
                android:layout_height="300dp"
                android:layout_marginStart="30dp"
                android:layout_marginEnd="30dp"
                android:layout_marginBottom="20dp"
                android:scaleType="fitCenter"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/clothing_buttonBackground"
                app:layout_constraintBottom_toTopOf="@+id/button_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:shapeAppearanceOverlay="@style/roundedImageView" />

            <GridLayout
                android:id="@+id/result_grid_container"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"
                android:columnCount="2"
                android:rowCount="2"
                android:visibility="gone"
                app:layout_constraintTop_toBottomOf="@id/clothing_buttonBackground"
                app:layout_constraintBottom_toTopOf="@+id/button_container"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent">

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/grid_image_1"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="4dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/roundedImageView" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/grid_image_2"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="4dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/roundedImageView" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/grid_image_3"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="4dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/roundedImageView" />

                <com.google.android.material.imageview.ShapeableImageView
                    android:id="@+id/grid_image_4"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="4dp"
                    android:layout_columnWeight="1"
                    android:layout_rowWeight="1"
                    android:scaleType="centerCrop"
                    app:shapeAppearanceOverlay="@style/roundedImageView" />

            </GridLayout>

            <LinearLayout
                android:id="@+id/button_container"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/result_image"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/generate_button"
                    android:layout_width="280dp"
                    android:layout_height="wrap_content"
                    android:background="@drawable/generate_button"
                    android:fontFamily="@font/rubik_bold"
                    android:foreground="@drawable/button_ripple"
                    android:text="@string/generate_btn_generate"
                    android:textAllCaps="false"
                    android:textColor="@color/black"
                    android:textSize="20dp" />

                <ImageButton
                    android:id="@+id/prompt_menu_button"
                    android:layout_width="60dp"
                    android:layout_height="60dp"
                    android:layout_marginStart="10dp"
                    android:background="@drawable/prompt_button_background"
                    android:src="@drawable/ic_menu_list"
                    android:foreground="@drawable/button_ripple"
                    android:padding="12dp"
                    android:scaleType="fitCenter" />

            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/loading_overlay"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CC000000"
        android:clickable="true"
        android:focusable="true"
        android:elevation="10dp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.cardview.widget.CardView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="40dp"
            app:cardBackgroundColor="#2A2A2A"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/rubik_bold"
                    android:text="@string/loading_title_creating"
                    android:textColor="@color/white"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/loading_stage_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="8dp"
                    android:fontFamily="@font/rubik_bold"
                    android:text="@string/loading_stage_uploading"
                    android:textColor="@color/dark_gray"
                    android:textSize="14sp" />

                <ProgressBar
                    android:id="@+id/loading_progress_bar"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="20dp"
                    android:progress="0"
                    android:progressDrawable="@drawable/custom_progress_bar" />

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp">

                    <TextView
                        android:id="@+id/loading_percentage"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_bold"
                        android:text="@string/loading_default_percent"
                        android:textColor="@color/green"
                        android:textSize="14sp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <TextView
                        android:id="@+id/loading_timer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/rubik_bold"
                        android:text="@string/loading_default_timer"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                </androidx.constraintlayout.widget.ConstraintLayout>

            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.constraintlayout.widget.ConstraintLayout>