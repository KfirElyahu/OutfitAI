<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".MainActivity">

    <ImageView
        android:id="@+id/settings_button"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="50dp"
        android:layout_marginEnd="20dp"
        android:padding="8dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/settings_icon" />

    <ImageView
        android:id="@+id/person_buttonBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/upload_button_background" />

    <ImageView
        android:id="@+id/person_icon"
        android:layout_width="120dp"
        android:layout_height="200dp"
        android:layout_marginTop="130dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/person_icon" />

    <ImageView
        android:id="@+id/person_uploadIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="310dp"
        app:layout_constraintStart_toEndOf="@+id/person_icon"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/upload_icon" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/person_selected_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/person_buttonBackground"
        app:layout_constraintEnd_toEndOf="@+id/person_buttonBackground"
        app:layout_constraintStart_toStartOf="@+id/person_buttonBackground"
        app:layout_constraintTop_toTopOf="@+id/person_buttonBackground"
        app:shapeAppearanceOverlay="@style/roundedImageView" />

    <View
        android:id="@+id/upload_person_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/button_ripple"
        app:layout_constraintBottom_toBottomOf="@+id/person_buttonBackground"
        app:layout_constraintEnd_toEndOf="@+id/person_buttonBackground"
        app:layout_constraintStart_toStartOf="@+id/person_buttonBackground"
        app:layout_constraintTop_toTopOf="@+id/person_buttonBackground" />

    <ImageView
        android:id="@+id/clothing_buttonBackground"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="25dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/person_buttonBackground"
        app:srcCompat="@drawable/upload_button_background" />

    <ImageView
        android:id="@+id/clothing_icon"
        android:layout_width="180dp"
        android:layout_height="186dp"
        android:layout_marginStart="-10dp"
        android:layout_marginTop="35dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/person_buttonBackground"
        app:srcCompat="@drawable/clothing_icon" />

    <ImageView
        android:id="@+id/clothing_uploadIcon"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginTop="210dp"
        app:layout_constraintStart_toEndOf="@+id/clothing_icon"
        app:layout_constraintTop_toBottomOf="@+id/person_buttonBackground"
        app:srcCompat="@drawable/upload_icon" />

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/clothing_selected_image"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="28dp"
        android:layout_marginBottom="28dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="@+id/clothing_buttonBackground"
        app:layout_constraintEnd_toEndOf="@+id/clothing_buttonBackground"
        app:layout_constraintStart_toStartOf="@+id/clothing_buttonBackground"
        app:layout_constraintTop_toTopOf="@+id/clothing_buttonBackground"
        app:shapeAppearanceOverlay="@style/roundedImageView" />

    <View
        android:id="@+id/upload_clothing_button"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/transparent"
        android:foreground="@drawable/button_ripple"
        app:layout_constraintBottom_toBottomOf="@+id/clothing_buttonBackground"
        app:layout_constraintEnd_toEndOf="@+id/clothing_buttonBackground"
        app:layout_constraintStart_toStartOf="@+id/clothing_buttonBackground"
        app:layout_constraintTop_toTopOf="@+id/clothing_buttonBackground" />


    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/generate_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="120dp"
        android:background="@drawable/generate_button"
        android:fontFamily="@font/roboto_bold"
        android:foreground="@drawable/button_ripple"
        android:text="Generate"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>