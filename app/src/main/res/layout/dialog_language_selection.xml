<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:padding="24dp">

    <TextView
        android:id="@+id/lang_dialog_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:gravity="center"
        android:text="Select Language / בחר שפה"
        android:textColor="@color/green"
        android:textSize="22sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.button.MaterialButtonToggleGroup
        android:id="@+id/language_toggle_group"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:singleSelection="true"
        app:selectionRequired="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/lang_dialog_title">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_english"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="120dp"
            android:layout_height="56dp"
            android:fontFamily="@font/rubik_bold"
            android:text="English"
            android:textSize="16sp"
            android:textColor="@color/language_toggle_button_text_color"
            app:strokeWidth="2dp"
            app:strokeColor="@color/language_toggle_button_stroke_color"
            app:backgroundTint="@color/language_toggle_button_bg_color" />

        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn_hebrew"
            style="@style/Widget.MaterialComponents.Button.OutlinedButton"
            android:layout_width="120dp"
            android:layout_height="56dp"
            android:fontFamily="@font/rubik_bold"
            android:text="עברית"
            android:textSize="16sp"
            android:textColor="@color/language_toggle_button_text_color"
            app:strokeWidth="2dp"
            app:strokeColor="@color/language_toggle_button_stroke_color"
            app:backgroundTint="@color/language_toggle_button_bg_color" />

    </com.google.android.material.button.MaterialButtonToggleGroup>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_confirm_lang"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="24dp"
        android:background="@drawable/green_large_button"
        android:fontFamily="@font/rubik_bold"
        android:foreground="@drawable/button_ripple"
        android:text="Confirm / אישור"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/language_toggle_group" />

</androidx.constraintlayout.widget.ConstraintLayout>