<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background">

    <TextView
        android:id="@+id/welcomeTo_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="120dp"
        android:fontFamily="@font/rubik_bold"
        android:text="@string/welcome_to"
        android:textColor="@color/white"
        android:textSize="50sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/OutfitAI_text"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/OutfitAI_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/brand_name_main"
        android:fontFamily="@font/rubik_bold"
        android:textColor="@color/green"
        android:textStyle="bold"
        android:textSize="50sp"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintEnd_toStartOf="@+id/OutfitAI_suffix"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/welcomeTo_text" />

    <TextView
        android:id="@+id/OutfitAI_suffix"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/brand_name_suffix"
        android:fontFamily="@font/rubik_bold"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:textSize="50sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/OutfitAI_text"
        app:layout_constraintStart_toEndOf="@+id/OutfitAI_text"
        app:layout_constraintEnd_toEndOf="parent" />

    <FrameLayout
        android:id="@+id/logoContainer"
        android:layout_width="280dp"
        android:layout_height="280dp"
        android:layout_marginBottom="50dp"
        app:layout_constraintBottom_toTopOf="@+id/SignIn_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/OutfitAI_text">

        <ImageView
            android:id="@+id/logoGlow"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:alpha="0"
            android:src="@drawable/logo_glow" />

        <ImageView
            android:id="@+id/logoImageView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_logo_animated" />

    </FrameLayout>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/SignIn_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/green_large_button"
        android:text="@string/welcome_sign_in"
        android:textColor="@color/black"
        android:fontFamily="@font/rubik_bold"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:foreground="@drawable/button_ripple"
        app:layout_constraintBottom_toTopOf="@+id/SignUp_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/SignUp_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="30dp"
        android:background="@drawable/green_large_button"
        android:text="@string/welcome_sign_up"
        android:textColor="@color/black"
        android:fontFamily="@font/rubik_bold"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:foreground="@drawable/button_ripple"
        app:layout_constraintBottom_toTopOf="@+id/Skip_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/Skip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="30dp"
        android:background="@drawable/white_small_button"
        android:text="@string/welcome_skip"
        android:textColor="@color/black"
        android:fontFamily="@font/rubik_bold"
        android:textAllCaps="false"
        android:textSize="20dp"
        android:foreground="@drawable/button_ripple"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>