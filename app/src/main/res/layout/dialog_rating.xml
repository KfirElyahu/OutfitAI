<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/dialog_background"
    android:padding="24dp">

    <TextView
        android:id="@+id/rating_dialog_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/rubik_bold"
        android:text="@string/rating_title"
        android:textColor="@color/green"
        android:textSize="22sp"
        android:textStyle="bold"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/rating_dialog_subtitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/rubik_bold"
        android:text="@string/rating_subtitle"
        android:textColor="@color/white"
        android:textSize="14sp"
        android:gravity="center"
        android:lineSpacingMultiplier="1.2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rating_dialog_title" />

    <LinearLayout
        android:id="@+id/stars_container"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rating_dialog_subtitle">

        <ImageView
            android:id="@+id/star_1"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:src="@drawable/ic_star_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/green" />

        <ImageView
            android:id="@+id/star_2"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:src="@drawable/ic_star_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/green" />

        <ImageView
            android:id="@+id/star_3"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:src="@drawable/ic_star_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/green" />

        <ImageView
            android:id="@+id/star_4"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:src="@drawable/ic_star_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/green" />

        <ImageView
            android:id="@+id/star_5"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:layout_margin="4dp"
            android:padding="4dp"
            android:src="@drawable/ic_star_outline"
            android:background="?attr/selectableItemBackgroundBorderless"
            app:tint="@color/green" />

    </LinearLayout>

    <TextView
        android:id="@+id/rating_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:fontFamily="@font/rubik_bold"
        android:text="@string/rating_tap_to_rate"
        android:textColor="@color/dark_gray"
        android:textSize="12sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/stars_container" />

    <androidx.cardview.widget.CardView
        android:id="@+id/feedback_card"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        app:cardBackgroundColor="#1A1A1A"
        app:cardCornerRadius="12dp"
        app:cardElevation="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rating_label">

        <EditText
            android:id="@+id/rating_feedback_input"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/rubik_bold"
            android:gravity="top|start"
            android:hint="@string/rating_hint_feedback"
            android:inputType="textMultiLine|textCapSentences"
            android:padding="16dp"
            android:textColor="@color/white"
            android:textColorHint="@color/dark_gray"
            android:textCursorDrawable="@null"
            android:textSize="14sp" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/rating_submit_button"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/green_large_button"
        android:fontFamily="@font/rubik_bold"
        android:foreground="@drawable/button_ripple"
        android:text="@string/rating_btn_submit"
        android:textAllCaps="false"
        android:textColor="@color/black"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/feedback_card" />

    <TextView
        android:id="@+id/rating_cancel_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="12dp"
        android:fontFamily="@font/rubik_bold"
        android:text="@string/rating_btn_cancel"
        android:textColor="@color/dark_gray"
        android:textSize="14sp"
        android:padding="8dp"
        android:background="?attr/selectableItemBackgroundBorderless"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/rating_submit_button"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>